<%- include('./partials/header') %>

<div
  class="w-full min-h-screen bg-center bg-zinc-400 bg-cover flex items-center justify-center p-4"
>
  <div
    data-aos="fade-up"
    data-aos-duration="1400"
    class="w-full max-w-md bg-white px-6 sm:px-10 py-8 rounded-[30px] shadow-lg"
  >
    <h1
      class="text-2xl sm:text-3xl tracking-tight leading-none font-semibold capitalize text-center text-zinc-700 mb-6"
    >
      Create new Account
    </h1>
    <form action="/register" method="POST" class="space-y-4">
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="text"
        name="username"
        placeholder="Username"
        required
      />
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="email"
        name="email"
        placeholder="Email"
        required
      />
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="tel"
        name="contact"
        placeholder="Contact"
        required
      />
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="password"
        name="password"
        placeholder="Password"
        required
      />
      <input
        class="block w-full px-3 py-2 rounded-full border-2 cursor-pointer text-white mt-6"
        type="submit"
        value="Create New Account"
        style="background-color: #ff1700"
      />
      <p class="text-xs font-semibold text-zinc-700 text-center mt-4">
        By continuing, you agree to Terms of Service and acknowledge you've read
        our Privacy Policy.
      </p>
    </form>
    <a href="/" class="block mt-6 text-sm text-zinc-700 text-center">
      Already have an Account? Login
    </a>
  </div>
</div>

<%- include('./partials/footer') %>
