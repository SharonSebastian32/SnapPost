<%- include('./partials/header') %>

<div
  class="w-full min-h-screen bg-center bg-cover bg-[url('https://static.vecteezy.com/system/resources/previews/042/343/596/non_2x/abstract-colorful-creative-business-flowing-wave-background-vector.jpg')] flex items-center justify-center p-4"
>
  <div
    data-aos="fade-up"
    data-aos-duration="1400"
    class="w-full max-w-md bg-white px-6 py-8 rounded-[30px] shadow-lg"
  >
    <h1
      class="text-2xl sm:text-3xl tracking-tight leading-none font-semibold capitalize text-center text-zinc-700 mb-6"
    >
      Welcome to snapPost
    </h1>
    <form action="/login" method="POST" class="space-y-4">
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="text"
        name="username"
        placeholder="Username"
        required
      />
      <input
        class="block w-full px-3 py-2 border-2 rounded-md"
        type="password"
        name="password"
        placeholder="Password"
        required
      />
      <a href="#" class="text-sm font-semibold text-zinc-700 inline-block">
        Forgot password
      </a>
      <input
        class="block w-full px-3 py-2 rounded-full border-2 cursor-pointer text-white"
        type="submit"
        value="Log In"
        style="background-color: #ff1700"
      />
      <p class="text-xs font-semibold text-zinc-700 text-center">
        By continuing, you agree to Terms of Service and acknowledge you've read
        our Privacy Policy.
      </p>
    </form>
    <a href="/register" class="block mt-6 text-sm text-zinc-700 text-center">
      Don't have an Account? Sign up
    </a>
  </div>
</div>

<%- include('./partials/footer') %>
